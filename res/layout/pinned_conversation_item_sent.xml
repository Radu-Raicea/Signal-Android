<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversation_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/conversation_item_background"
    android:focusable="true"
    android:nextFocusLeft="@id/container"
    android:nextFocusRight="@id/embedded_text_editor"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <Button
            android:id="@+id/unpin_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/pinned_body_bubble"
            android:layout_toStartOf="@+id/pinned_body_bubble"
            android:layout_weight="1"
            android:background="@drawable/ic_close_white_48dp" />

        <LinearLayout
            android:id="@+id/pinned_body_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/indicators_parent"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/indicators_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/pinned_message_bubble"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pinned_message_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="@color/grey_500"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/pinned_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingBottom="7dp"
                android:paddingTop="4dp"
                android:textAlignment="textStart"
                android:textColorLink="@color/black"
                android:textSize="16sp"
                tools:text="test test test test test test test test test test test test" />

            <TextView
                android:id="@+id/conversation_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/grey_400"
                android:textSize="12sp"
                tools:text="Tue 10:50 AM" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
